<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TattoCenterList">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        app:contentPadding="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <RelativeLayout
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView

                android:id="@+id/imageStore4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"

                app:srcCompat="@drawable/ic_launcher_foreground" />

            <TextView
                android:id="@+id/title_store4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imageStore4"
                android:layout_toRightOf="@+id/imageStore4"
                android:text="Tatto Store"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/description_store4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_store4"
                android:layout_marginStart="1dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/imageStore4"
                android:text="@string/lorem"
                android:textColor="@color/black"
                android:textStyle="normal" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:padding="16dp">

            <ImageView

                android:id="@+id/imageStore3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"

                app:srcCompat="@drawable/ic_launcher_foreground" />

            <TextView
                android:id="@+id/title_store3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imageStore3"
                android:layout_toRightOf="@+id/imageStore3"
                android:text="Tatto Store"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/description_store3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_store3"
                android:layout_marginStart="1dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/imageStore3"
                android:text="@string/lorem"
                android:textColor="@color/black"
                android:textStyle="normal" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="280dp"
            android:padding="16dp">

            <ImageView

                android:id="@+id/imageStore2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"

                app:srcCompat="@drawable/ic_launcher_foreground" />

            <TextView
                android:id="@+id/title_store2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imageStore2"
                android:layout_toRightOf="@+id/imageStore2"
                android:text="Tatto Store"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/description_store2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_store2"
                android:layout_marginStart="1dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/imageStore2"
                android:text="@string/lorem"
                android:textColor="@color/black"
                android:textStyle="normal" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="420dp"
            android:padding="16dp">

            <ImageView

                android:id="@+id/imageStore"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"

                app:srcCompat="@drawable/ic_launcher_foreground" />

            <TextView
                android:id="@+id/tittle_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imageStore"
                android:layout_toRightOf="@+id/imageStore"
                android:text="Tatto Store"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/description_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tittle_store"
                android:layout_marginStart="1dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/imageStore"
                android:text="@string/lorem"
                android:textColor="@color/black"
                android:textStyle="normal" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/btn_newpost"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:layout_width="151dp"
        android:layout_height="50dp"
        android:text="@string/btn_newpost"
        android:textAllCaps="false"
        android:textColor="@color/purple_800"
        app:icon="@drawable/ic_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/purple_800"
        app:strokeWidth="2dp" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="417dp"
        android:layout_height="94dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/purple_800"
            android:backgroundTintMode="add"
            android:src="@drawable/ic_search"
            app:itemIconTint="@color/white"
            app:itemTextColor="@color/white"

            app:layout_anchor="@id/bottomAppMenu"
            app:maxImageSize="30dp"
            tools:layout_editor_absoluteX="177dp"
            tools:layout_editor_absoluteY="634dp" />

        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bottomAppMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/purple_800"
            android:backgroundTint="@color/purple_600"
            android:backgroundTintMode="add"
            app:fabCradleMargin="10dp"
            app:fabCradleRoundedCornerRadius="10dp">

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottomMenuIcons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                app:elevation="0dp"
                app:itemIconTint="@color/white"
                app:itemTextColor="@color/white"
                app:menu="@menu/bottom_menu" />

        </com.google.android.material.bottomappbar.BottomAppBar>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</androidx.constraintlayout.widget.ConstraintLayout>